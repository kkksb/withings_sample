{
    "request": {
        "method": "POST",
        "urlPattern": "/v2/signature",
        "headers": {
            "Authorization": {
                "doesNotMatch": "Bearer ($|&.*)"
            },
            "Content-Type": {
                "matches": "application/x-www-form-urlencoded"
            }
        },
        "bodyPatterns": [
            {
                "matches": "(.*&|^)action=getnonce($|&.*)"
            },
            {
                "matches": "(.*&|^)client_id=test_client_id($|&.*)"
            },
            {
                "matches": "(.*&|^)timestamp=1594245600($|&.*)"
            },
            {
                "matches": "(.*&|^)signature=test_signature_sample($|&.*)"
            }
        ]
    },
    "response": {
        "status": 200,
        "bodyFileName": "Signature/Signaturev2-Getnonce.json",
        "headers": {
            "Content-Type": "application/json"
        }
    }
}