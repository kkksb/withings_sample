{
    "request": {
        "method": "POST",
        "urlPattern": "/v2/heart",
        "headers": {
            "Authorization": {
                "doesNotMatch": "Bearer ($|&.*)"
            },
            "Content-Type": {
                "matches": "application/x-www-form-urlencoded"
            }
        },
        "bodyPatterns": [
            {
                "matches": "(.*&|^)action=list($|&.*)"
            },
            {
                "matches": "(.*&|^)startdate=2021-01-01($|&.*)"
            },
            {
                "matches": "(.*&|^)enddate=2021-01-02($|&.*)"
            },
            {
                "matches": "(.*&|^)offset=1($|&.*)"
            }
        ]
    },
    "response": {
        "status": 200,
        "bodyFileName": "Heart/Heartv2-List.json",
        "headers": {
            "Content-Type": "application/json"
        }
    }
}